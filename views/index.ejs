<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="../public/styles/style.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>To-DO List</title>
</head>
<body class="bg-dark container-md">
    <div class="p-3 mb-2 text-white">
        <div class="text-center font-monospace">
            <h1> To-Do List App </h1>
        </div>
        <div style="font-family: fantasy;" class="forms align-items-center">
            <h2> Add a ToDo</h2>
            <form action="/" method="post">
                <div class="my-3 ">
                    <input type="text" class="form-control "  name="taskName" placeholder="Enter Your Task">
                    <input type="text" class="form-control my-3 " name="taskDescription" placeholder="Describe your task">
                </div>
                <div class="container-fluid my-2">
                    <input id="submitButton"  class="btn btn-primary" type="submit" placeholder="submit">
                </div>
            </form>
        </div>
        <div style="font-family: fantasy;" class="taskList">
            <ul>
                <% data.forEach(element => { %>
                    <li>
                        <div class="card text-bg-primary mb-3" >
                            <div class="card-body ">
                                <form action="/" method="post" >
                                    <h2> <%= element.toDoTask %></h2>
                                    <h2> <%= element.toDoDescrption %></h2>
                                </form>
                            </div>
                        </div>
                    </li>
                    <form action="/delete" method="post">
                            <button  formaction="/delete" id="deleteButton"  class="btn btn-danger my-3" type="submit">Delete</button>
                            <input type="hidden" name="toDoTask" value="<%= element.toDoTask %>" >
                            <input type="hidden" name="toDoTask" value="<%= element.toDoDescrption %>" >
                    </form>
                <% }); %>
                <form action="/clear" method="post">
                <button  id="clearbutton"  class="btn btn-danger btn-sm" type="submit">Clear All</button>
                </form> 
            </div>
            </ul>
    </div>
    <footer>
        <p style="display: flex; color: white; justify-content: center;"> Made with ❤️ by Sankalp Agrawal</p>
    </footer>
</body>
</html>